<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="SSBJr.ndb.integration.Views.DatabaseConfigPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SSBJr.ndb.integration.ViewModels"
             x:DataType="viewmodels:DatabaseConfigViewModel"
             Title="🗄️ Configuração de Banco de Dados"
             Shell.BackgroundColor="{StaticResource Primary}">

    <ScrollView>
        <StackLayout Padding="20" Spacing="20">

            <!-- Header -->
            <Frame BackgroundColor="{StaticResource Primary}" 
                   CornerRadius="15" 
                   Padding="20"
                   HasShadow="True">
                <StackLayout>
                    <Label Text="🗄️ Configuração de Banco de Dados"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center" />
                    <Label Text="Configure o banco de dados para sua API"
                           FontSize="14"
                           TextColor="White"
                           Opacity="0.8"
                           HorizontalOptions="Center" />
                </StackLayout>
            </Frame>

            <!-- Database Type Selection -->
            <Frame BackgroundColor="White" 
                   CornerRadius="15" 
                   Padding="20"
                   HasShadow="True">
                <StackLayout>
                    <Label Text="💾 Tipo de Banco de Dados"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}" />

                    <Button Text="🐘 PostgreSQL - Recomendado"
                            Command="{Binding SelectDatabaseTypeCommand}"
                            CommandParameter="PostgreSQL"
                            BackgroundColor="#336791"
                            TextColor="White"
                            CornerRadius="8"
                            Margin="0,10,0,5" />

                    <Button Text="🍃 MongoDB - NoSQL"
                            Command="{Binding SelectDatabaseTypeCommand}"
                            CommandParameter="MongoDB"
                            BackgroundColor="#47A248"
                            TextColor="White"
                            CornerRadius="8"
                            Margin="0,5" />

                    <Button Text="🐬 MySQL - Popular"
                            Command="{Binding SelectDatabaseTypeCommand}"
                            CommandParameter="MySQL"
                            BackgroundColor="#4479A1"
                            TextColor="White"
                            CornerRadius="8"
                            Margin="0,5" />

                    <Button Text="🔷 SQL Server - Enterprise"
                            Command="{Binding SelectDatabaseTypeCommand}"
                            CommandParameter="SQLServer"
                            BackgroundColor="#CC2927"
                            TextColor="White"
                            CornerRadius="8"
                            Margin="0,5" />

                    <Button Text="⚡ Redis - Cache e Data"
                            Command="{Binding SelectDatabaseTypeCommand}"
                            CommandParameter="Redis"
                            BackgroundColor="#DC382D"
                            TextColor="White"
                            CornerRadius="8"
                            Margin="0,5" />
                </StackLayout>
            </Frame>

            <!-- Current Configuration -->
            <Frame BackgroundColor="White" 
                   CornerRadius="15" 
                   Padding="20"
                   HasShadow="True">
                <StackLayout>
                    <Label Text="⚙️ Configuração Atual"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}" />

                    <!-- Selected Type Display -->
                    <Frame BackgroundColor="{StaticResource Primary}"
                           CornerRadius="10"
                           Padding="15"
                           Margin="0,10,0,20">
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding SelectedTypeIcon}"
                                   FontSize="24"
                                   VerticalOptions="Center" />
                            <StackLayout Margin="15,0,0,0">
                                <Label Text="{Binding SelectedTypeName}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="White" />
                                <Label Text="{Binding SelectedTypeDescription}"
                                       FontSize="12"
                                       TextColor="White"
                                       Opacity="0.8" />
                            </StackLayout>
                        </StackLayout>
                    </Frame>

                    <!-- Connection String -->
                    <Label Text="🔗 String de Conexão"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}" />
                    <Entry Text="{Binding ConnectionString}"
                           Placeholder="Digite a string de conexão..."
                           BackgroundColor="{StaticResource Tertiary}"
                           Margin="0,5,0,15" />

                    <!-- Advanced Configuration -->
                    <Frame BackgroundColor="{StaticResource Tertiary}" CornerRadius="10" Padding="15" Margin="0,20,0,0">
                        <StackLayout>
                            <Button x:Name="AdvancedToggleButton"
                                    Text="🔧 Configurações Avançadas ▼"
                                    BackgroundColor="Transparent"
                                    TextColor="{StaticResource Secondary}"
                                    FontSize="14"
                                    FontAttributes="Bold"
                                    Clicked="OnAdvancedToggleClicked" />
                            
                            <StackLayout x:Name="AdvancedConfigPanel" IsVisible="False" Padding="10,0,0,0">
                                <!-- Read Replicas -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    
                                    <Label Grid.Column="0"
                                           Text="Réplicas de Leitura"
                                           VerticalOptions="Center" />
                                    <Switch Grid.Column="1"
                                            IsToggled="{Binding EnableReadReplicas}" />
                                </Grid>

                                <!-- Max Connections -->
                                <Label Text="Máximo de Conexões" />
                                <Slider Minimum="10" Maximum="500" Value="{Binding MaxConnections}" />
                                <Label Text="{Binding MaxConnections, StringFormat='Conexões: {0:F0}'}"
                                       FontSize="12"
                                       TextColor="Gray" />

                                <!-- Enable Migrations -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    
                                    <Label Grid.Column="0"
                                           Text="Habilitar Migrações"
                                           VerticalOptions="Center" />
                                    <Switch Grid.Column="1"
                                            IsToggled="{Binding EnableMigrations}" />
                                </Grid>
                            </StackLayout>
                        </StackLayout>
                    </Frame>
                </StackLayout>
            </Frame>

            <!-- Test Connection -->
            <Frame BackgroundColor="White" 
                   CornerRadius="15" 
                   Padding="20"
                   HasShadow="True">
                <StackLayout>
                    <Label Text="🔍 Testar Configuração"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}" />

                    <Label Text="Teste a conexão antes de salvar"
                           FontSize="12"
                           TextColor="Gray"
                           Margin="0,0,0,15" />

                    <Button Text="🧪 Testar Conexão"
                            Command="{Binding TestConnectionCommand}"
                            BackgroundColor="Orange"
                            TextColor="White"
                            CornerRadius="8"
                            IsEnabled="{Binding IsNotTesting}" />

                    <!-- Test Result -->
                    <Frame IsVisible="{Binding HasTestResult}"
                           BackgroundColor="{Binding TestResult.IsSuccess, Converter={StaticResource BoolToTestResultColorConverter}}"
                           CornerRadius="8"
                           Padding="15"
                           Margin="0,10,0,0">
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding TestResult.IsSuccess, Converter={StaticResource BoolToEmojiConverter}}"
                                   FontSize="20"
                                   VerticalOptions="Center" />
                            <StackLayout Margin="10,0,0,0">
                                <Label Text="{Binding TestResult.Message}"
                                       FontAttributes="Bold"
                                       TextColor="White" />
                                <Label Text="{Binding TestResult.Details}"
                                       FontSize="12"
                                       TextColor="White"
                                       Opacity="0.8"
                                       IsVisible="{Binding TestResult.Details, Converter={StaticResource IsNotEmptyConverter}}" />
                            </StackLayout>
                        </StackLayout>
                    </Frame>
                </StackLayout>
            </Frame>

            <!-- Action Buttons -->
            <StackLayout Orientation="Horizontal" Spacing="10">
                <Button Text="💾 Salvar"
                        Command="{Binding SaveConfigCommand}"
                        BackgroundColor="Green"
                        TextColor="White"
                        CornerRadius="8"
                        HorizontalOptions="FillAndExpand" />

                <Button Text="❌ Cancelar"
                        Command="{Binding CancelCommand}"
                        BackgroundColor="Gray"
                        TextColor="White"
                        CornerRadius="8"
                        HorizontalOptions="FillAndExpand" />
            </StackLayout>

        </StackLayout>
    </ScrollView>

</ContentPage>