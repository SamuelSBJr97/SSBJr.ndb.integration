                    </Grid>

                    <!-- Auto Refresh Interval -->
                    <StackLayout IsVisible="{Binding EnableAutoRefresh}">
                        <Label Text="Intervalo de AtualizaÃ§Ã£o (segundos)" />
                        <Slider Minimum="5" Maximum="300" Value="{Binding AutoRefreshInterval}" />
                        <Label Text="{Binding AutoRefreshInterval, StringFormat='Intervalo: {0:F0} segundos'}"
                               FontSize="12"
                               TextColor="Gray" />
                    </StackLayout>

                    <!-- Enable Notifications -->
                    <Grid Margin="0,15,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        
                        <Label Grid.Column="0"
                               Text="NotificaÃ§Ãµes"
                               VerticalOptions="Center" />
                        <Switch Grid.Column="1"
