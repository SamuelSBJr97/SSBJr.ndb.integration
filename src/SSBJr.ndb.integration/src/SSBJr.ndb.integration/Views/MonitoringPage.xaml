<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="SSBJr.ndb.integration.Views.MonitoringPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SSBJr.ndb.integration.ViewModels"
             x:DataType="viewmodels:MonitoringViewModel"
             Title="?? Monitoramento"
             Shell.BackgroundColor="{StaticResource Primary}">

    <ScrollView>
        <StackLayout Padding="20" Spacing="20">

            <!-- Header -->
            <Frame BackgroundColor="{StaticResource Primary}" 
                   CornerRadius="15" 
                   Padding="20"
                   HasShadow="True">
                <StackLayout>
                    <Label Text="?? Monitoramento de APIs"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center" />
                    <Label Text="Acompanhe o desempenho e saúde das suas APIs"
                           FontSize="14"
                           TextColor="White"
                           Opacity="0.8"
                           HorizontalOptions="Center" />
                </StackLayout>
            </Frame>

            <!-- System Overview -->
            <Frame BackgroundColor="White" 
                   CornerRadius="15" 
                   Padding="20"
                   HasShadow="True">
                <StackLayout>
                    <Label Text="?? Visão Geral do Sistema"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}" />

                    <!-- Metrics Cards -->
                    <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,*" RowSpacing="10" ColumnSpacing="10" Margin="0,15,0,0">
                        
                        <!-- Total APIs -->
                        <Frame Grid.Row="0" Grid.Column="0" BackgroundColor="{StaticResource Success}" CornerRadius="10" Padding="15">
                            <StackLayout>
                                <Label Text="??" FontSize="24" HorizontalOptions="Center" />
                                <Label Text="{Binding TotalApis}" FontSize="20" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center" />
                                <Label Text="APIs Totais" FontSize="12" TextColor="White" HorizontalOptions="Center" />
                            </StackLayout>
                        </Frame>

                        <!-- Running APIs -->
                        <Frame Grid.Row="0" Grid.Column="1" BackgroundColor="{StaticResource Primary}" CornerRadius="10" Padding="15">
                            <StackLayout>
                                <Label Text="?" FontSize="24" HorizontalOptions="Center" />
                                <Label Text="{Binding RunningApis}" FontSize="20" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center" />
                                <Label Text="Em Execução" FontSize="12" TextColor="White" HorizontalOptions="Center" />
                            </StackLayout>
                        </Frame>

                        <!-- Failed APIs -->
                        <Frame Grid.Row="1" Grid.Column="0" BackgroundColor="{StaticResource Error}" CornerRadius="10" Padding="15">
                            <StackLayout>
                                <Label Text="?" FontSize="24" HorizontalOptions="Center" />
                                <Label Text="{Binding FailedApis}" FontSize="20" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center" />
                                <Label Text="Com Falhas" FontSize="12" TextColor="White" HorizontalOptions="Center" />
                            </StackLayout>
                        </Frame>

                        <!-- System Health -->
                        <Frame Grid.Row="1" Grid.Column="1" BackgroundColor="{Binding SystemHealthColor}" CornerRadius="10" Padding="15">
                            <StackLayout>
                                <Label Text="{Binding SystemHealthIcon}" FontSize="24" HorizontalOptions="Center" />
                                <Label Text="{Binding SystemHealthPercentage, StringFormat='{0:F0}%'}" FontSize="20" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center" />
                                <Label Text="Saúde do Sistema" FontSize="12" TextColor="White" HorizontalOptions="Center" />
                            </StackLayout>
                        </Frame>
                    </Grid>
                </StackLayout>
            </Frame>

            <!-- APIs Status -->
            <Frame BackgroundColor="White" 
                   CornerRadius="15" 
                   Padding="20"
                   HasShadow="True">
                <StackLayout>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        
                        <Label Grid.Column="0"
                               Text="?? Status das APIs"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="{StaticResource Primary}"
                               VerticalOptions="Center" />

                        <Button Grid.Column="1"
                                Text="??"
                                Command="{Binding RefreshCommand}"
                                BackgroundColor="{StaticResource Secondary}"
                                TextColor="White"
                                CornerRadius="20"
                                WidthRequest="40"
                                HeightRequest="40" />
                    </Grid>

                    <CollectionView ItemsSource="{Binding ApiStatuses}" Margin="0,15,0,0">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BackgroundColor="{StaticResource Tertiary}" 
                                       CornerRadius="10" 
                                       Margin="0,5"
                                       Padding="15">
                                    <Grid ColumnDefinitions="Auto,*,Auto,Auto">
                                        <Label Grid.Column="0"
                                               Text="{Binding StatusIcon}"
                                               FontSize="20"
                                               VerticalOptions="Center" />

                                        <StackLayout Grid.Column="1" Margin="15,0,0,0">
                                            <Label Text="{Binding Name}"
                                                   FontSize="16"
                                                   FontAttributes="Bold"
                                                   TextColor="{StaticResource Primary}" />
                                            <Label Text="{Binding Status}"
                                                   FontSize="12"
                                                   TextColor="Gray" />
                                            <Label Text="{Binding LastUpdated, StringFormat='Atualizado: {0:HH:mm:ss}'}"
                                                   FontSize="10"
                                                   TextColor="Gray" />
                                        </StackLayout>

                                        <Label Grid.Column="2"
                                               Text="{Binding ResponseTime, StringFormat='{0}ms'}"
                                               FontSize="12"
                                               TextColor="Gray"
                                               VerticalOptions="Center"
                                               Margin="0,0,10,0" />

                                        <Button Grid.Column="3"
                                                Text="??"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MonitoringViewModel}}, Path=ViewApiDetailsCommand}"
                                                CommandParameter="{Binding .}"
                                                BackgroundColor="{StaticResource Primary}"
                                                TextColor="White"
                                                CornerRadius="15"
                                                WidthRequest="30"
                                                HeightRequest="30" />
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
            </Frame>

            <!-- Recent Activity -->
            <Frame BackgroundColor="White" 
                   CornerRadius="15" 
                   Padding="20"
                   HasShadow="True">
                <StackLayout>
                    <Label Text="?? Atividade Recente"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}" />

                    <CollectionView ItemsSource="{Binding RecentActivities}" Margin="0,15,0,0">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <StackLayout Orientation="Horizontal" Padding="0,8" Spacing="15">
                                    <Label Text="{Binding Icon}"
                                           FontSize="16"
                                           VerticalOptions="Center" />
                                    <StackLayout HorizontalOptions="FillAndExpand">
                                        <Label Text="{Binding Message}"
                                               FontSize="14"
                                               TextColor="{StaticResource Primary}" />
                                        <Label Text="{Binding Timestamp, StringFormat='{0:dd/MM/yyyy HH:mm:ss}'}"
                                               FontSize="12"
                                               TextColor="Gray" />
                                    </StackLayout>
                                </StackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
            </Frame>

            <!-- Quick Actions -->
            <Frame BackgroundColor="White" 
                   CornerRadius="15" 
                   Padding="20"
                   HasShadow="True">
                <StackLayout>
                    <Label Text="? Ações Rápidas"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}" />

                    <StackLayout Orientation="Horizontal" Spacing="10" Margin="0,15,0,0">
                        <Button Text="?? Métricas Detalhadas"
                                Command="{Binding ViewDetailedMetricsCommand}"
                                BackgroundColor="{StaticResource Primary}"
                                TextColor="White"
                                CornerRadius="8"
                                HorizontalOptions="FillAndExpand" />

                        <Button Text="?? Logs do Sistema"
                                Command="{Binding ViewSystemLogsCommand}"
                                BackgroundColor="{StaticResource Secondary}"
                                TextColor="White"
                                CornerRadius="8"
                                HorizontalOptions="FillAndExpand" />
                    </StackLayout>

                    <StackLayout Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
                        <Button Text="?? Configurar Alertas"
                                Command="{Binding ConfigureAlertsCommand}"
                                BackgroundColor="{StaticResource Warning}"
                                TextColor="White"
                                CornerRadius="8"
                                HorizontalOptions="FillAndExpand" />

                        <Button Text="?? Relatórios"
                                Command="{Binding ViewReportsCommand}"
                                BackgroundColor="{StaticResource Success}"
                                TextColor="White"
                                CornerRadius="8"
                                HorizontalOptions="FillAndExpand" />
                    </StackLayout>
                </StackLayout>
            </Frame>

        </StackLayout>
    </ScrollView>

</ContentPage>