{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=apimanager.db",
    "PostgresConnection": "Host=localhost;Database=apimanager;Username=postgres;Password=password",
    "Redis": "localhost:6379",
    "Docker": "npipe://./pipe/docker_engine"
  },
  "JwtSettings": {
    "SecretKey": "your-super-secret-key-for-jwt-tokens-at-least-256-bits-long-for-production-use",
    "Issuer": "SSBJr.ApiManager",
    "Audience": "SSBJr.ApiManager.Users",
    "ExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "ApiManager": {
    "DefaultDockerRegistry": "localhost:5000",
    "MaxApisPerUser": 50,
    "MaxContainersPerApi": 10,
    "DefaultResourceLimits": {
      "CPU": "500m",
      "Memory": "512Mi",
      "Storage": "1Gi"
    }
  },
  "AuditArchive": {
    "IntervalHours": 24,
    "ArchiveOlderThanDays": 90,
    "RetentionDays": 365
  },
  "Infrastructure": {
    "DefaultImages": {
      "PostgreSQL": "postgres:15-alpine",
      "MongoDB": "mongo:6",
      "Redis": "redis:7-alpine",
      "RabbitMQ": "rabbitmq:3-management-alpine",
      "Prometheus": "prom/prometheus:latest",
      "Grafana": "grafana/grafana:latest"
    },
    "NetworkName": "ssbjr-api-network",
    "VolumePrefix": "ssbjr-api-vol"
  },
  "AllowedHosts": "*"
}
