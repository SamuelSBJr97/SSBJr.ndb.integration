<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SSBJr.ndb.integration.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SSBJr.ndb.integration"
    Shell.FlyoutBehavior="Flyout"
    Title="SSBJr.ndb.integration">

    <Shell.FlyoutHeader>
        <Grid BackgroundColor="{StaticResource Primary}" HeightRequest="120">
            <Label Text="🚀 SSBJr API Manager"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="White"
                   VerticalOptions="Center"
                   HorizontalOptions="Center" />
        </Grid>
    </Shell.FlyoutHeader>

    <FlyoutItem Title="🏠 Início" Icon="house">
        <ShellContent
            Title="Início"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
    </FlyoutItem>

    <FlyoutItem Title="🚀 Gerenciador de APIs" Icon="cloud_upload">
        <ShellContent
            Title="APIs"
            ContentTemplate="{DataTemplate local:ApiManagerPage}"
            Route="ApiManagerPage" />
    </FlyoutItem>

</Shell>
