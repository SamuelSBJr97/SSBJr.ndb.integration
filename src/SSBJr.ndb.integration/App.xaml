<?xml version="1.0" encoding="UTF-8" ?>
<Application x:Class="SSBJr.ndb.integration.App"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SSBJr.ndb.integration"
             xmlns:converters="clr-namespace:SSBJr.ndb.integration.Converters">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Value Converters -->
            <converters:BooleanToColorConverter x:Key="BooleanToColorConverter" />
            <converters:BoolToTestResultColorConverter x:Key="BoolToTestResultColorConverter" />
            <converters:BoolToEmojiConverter x:Key="BoolToEmojiConverter" />
            <converters:IsNotEmptyConverter x:Key="IsNotEmptyConverter" />
            <converters:NotEqualsConverter x:Key="NotEqualsConverter" />
            <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
            <converters:InvertBooleanConverter x:Key="InvertBooleanConverter" />
        </ResourceDictionary>
    </Application.Resources>

</Application>
