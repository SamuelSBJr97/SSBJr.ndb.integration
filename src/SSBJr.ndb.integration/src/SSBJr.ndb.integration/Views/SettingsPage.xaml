                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        
                        <Label Grid.Column="0"
                               Text="AtualizaÃ§Ã£o AutomÃ¡tica"
                               VerticalOptions="Center" />
                        <Switch Grid.Column="1"
