                    <Slider Minimum="5" Maximum="120" Value="{Binding ApiTimeout}" />
                    <Label Text="{Binding ApiTimeout, StringFormat='Timeout: {0:F0} segundos'}"
                           FontSize="12"
                           TextColor="Gray" />

                    <Button Text="ðŸ§ª Testar ConexÃ£o com API"
