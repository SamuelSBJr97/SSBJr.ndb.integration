<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="SSBJr.ndb.integration.Views.MessagingConfigPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SSBJr.ndb.integration.ViewModels"
             x:DataType="viewmodels:MessagingConfigViewModel"
             Title="?? Configuração de Mensageria"
             Shell.BackgroundColor="{StaticResource Primary}">

    <ScrollView>
        <StackLayout Padding="20" Spacing="20">

            <!-- Header -->
            <Frame BackgroundColor="{StaticResource Primary}" 
                   CornerRadius="15" 
                   Padding="20"
                   HasShadow="True">
                <StackLayout>
                    <Label Text="?? Configuração de Mensageria"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center" />
                    <Label Text="Configure sistemas modernos de mensageria para suas APIs"
                           FontSize="14"
                           TextColor="White"
                           Opacity="0.8"
                           HorizontalOptions="Center" />
                </StackLayout>
            </Frame>

            <!-- Messaging Type Selection -->
            <Frame BackgroundColor="White" 
                   CornerRadius="15" 
                   Padding="20"
                   HasShadow="True">
                <StackLayout>
                    <Label Text="?? Tipo de Mensageria"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}" />

                    <!-- Recommended Services -->
                    <Label Text="Serviços Modernos (Recomendados)"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Secondary}"
                           Margin="0,15,0,5" />

                    <Button Text="?? Apache Kafka - Alto Throughput"
                            Command="{Binding SelectMessagingTypeCommand}"
                            CommandParameter="Apache_Kafka"
                            BackgroundColor="#FF4081"
                            TextColor="White"
                            CornerRadius="8"
                            Margin="0,5" />

                    <Button Text="? NATS - Simplicidade e Performance"
                            Command="{Binding SelectMessagingTypeCommand}"
                            CommandParameter="NATS"
                            BackgroundColor="#2196F3"
                            TextColor="White"
                            CornerRadius="8"
                            Margin="0,5" />

                    <Button Text="?? Azure Service Bus - Enterprise Cloud"
                            Command="{Binding SelectMessagingTypeCommand}"
                            CommandParameter="Azure_ServiceBus"
                            BackgroundColor="#0078D4"
                            TextColor="White"
                            CornerRadius="8"
                            Margin="0,5" />

                    <!-- Cloud Services -->
                    <Label Text="Serviços Cloud"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Secondary}"
                           Margin="0,15,0,5" />

                    <Button Text="?? AWS SQS - Filas Simples"
                            Command="{Binding SelectMessagingTypeCommand}"
                            CommandParameter="AWS_SQS"
                            BackgroundColor="#FF9900"
                            TextColor="White"
                            CornerRadius="8"
                            Margin="0,5" />

                    <Button Text="?? AWS EventBridge - Event-Driven"
                            Command="{Binding SelectMessagingTypeCommand}"
                            CommandParameter="AWS_EventBridge"
                            BackgroundColor="#FF9900"
                            TextColor="White"
                            CornerRadius="8"
                            Margin="0,5" />

                    <Button Text="?? Google Pub/Sub - Serverless"
                            Command="{Binding SelectMessagingTypeCommand}"
                            CommandParameter="Google_PubSub"
                            BackgroundColor="#4285F4"
                            TextColor="White"
                            CornerRadius="8"
                            Margin="0,5" />

                    <!-- Legacy -->
                    <Label Text="?? Legado (Não Recomendado)"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="Red"
                           Margin="0,15,0,5" />

                    <Button Text="?? RabbitMQ (Deprecated)"
                            Command="{Binding SelectMessagingTypeCommand}"
                            CommandParameter="RabbitMQ"
                            BackgroundColor="Gray"
                            TextColor="White"
                            CornerRadius="8"
                            Margin="0,5" />

                    <Button Text="?? Nenhuma Mensageria"
                            Command="{Binding SelectMessagingTypeCommand}"
                            CommandParameter="None"
                            BackgroundColor="{StaticResource Tertiary}"
                            TextColor="{StaticResource Primary}"
                            CornerRadius="8"
                            Margin="0,5" />
                </StackLayout>
            </Frame>

            <!-- Current Configuration -->
            <Frame BackgroundColor="White" 
                   CornerRadius="15" 
                   Padding="20"
                   HasShadow="True"
                   IsVisible="{Binding SelectedType, Converter={StaticResource NotEqualsConverter}, ConverterParameter='None'}">
                <StackLayout>
                    <Label Text="?? Configuração Atual"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}" />

                    <!-- Selected Type Display -->
                    <Frame BackgroundColor="{StaticResource Primary}"
                           CornerRadius="10"
                           Padding="15"
                           Margin="0,10,0,20">
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding SelectedTypeIcon}"
                                   FontSize="24"
                                   VerticalOptions="Center" />
                            <StackLayout Margin="15,0,0,0">
                                <Label Text="{Binding SelectedTypeName}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="White" />
                                <Label Text="{Binding SelectedTypeDescription}"
                                       FontSize="12"
                                       TextColor="White"
                                       Opacity="0.8" />
                            </StackLayout>
                        </StackLayout>
                    </Frame>

                    <!-- Connection String -->
                    <Label Text="?? String de Conexão"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}" />
                    <Entry Text="{Binding ConnectionString}"
                           Placeholder="Digite a string de conexão..."
                           BackgroundColor="{StaticResource Tertiary}"
                           Margin="0,5,0,15" />

                    <!-- Advanced Configuration -->
                    <Expander IsExpanded="False">
                        <Expander.Header>
                            <Label Text="?? Configurações Avançadas"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Secondary}" />
                        </Expander.Header>
                        
                        <StackLayout Padding="10,0,0,0">
                            <!-- Batching Configuration -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                
                                <Label Grid.Column="0"
                                       Text="Habilitar Batching"
                                       VerticalOptions="Center" />
                                <Switch Grid.Column="1"
                                        IsToggled="{Binding EnableBatching}" />
                            </Grid>

                            <!-- Batch Size -->
                            <StackLayout IsVisible="{Binding EnableBatching}">
                                <Label Text="Tamanho do Batch" />
                                <Slider Minimum="10" Maximum="1000" Value="{Binding BatchSize}" />
                                <Label Text="{Binding BatchSize, StringFormat='Tamanho: {0:F0}'}"
                                       FontSize="12"
                                       TextColor="Gray" />
                            </StackLayout>

                            <!-- Partitioning (Kafka specific) -->
                            <Grid IsVisible="{Binding IsKafka}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                
                                <Label Grid.Column="0"
                                       Text="Habilitar Particionamento"
                                       VerticalOptions="Center" />
                                <Switch Grid.Column="1"
                                        IsToggled="{Binding EnablePartitioning}" />
                            </Grid>

                            <!-- Partition Count -->
                            <StackLayout IsVisible="{Binding ShowPartitionConfig}">
                                <Label Text="Número de Partições" />
                                <Slider Minimum="1" Maximum="20" Value="{Binding PartitionCount}" />
                                <Label Text="{Binding PartitionCount, StringFormat='Partições: {0:F0}'}"
                                       FontSize="12"
                                       TextColor="Gray" />
                            </StackLayout>

                            <!-- Consumer Group -->
                            <Label Text="Grupo de Consumidores" />
                            <Entry Text="{Binding ConsumerGroup}"
                                   Placeholder="default"
                                   BackgroundColor="{StaticResource Tertiary}" />

                            <!-- Dead Letter Queue -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                
                                <Label Grid.Column="0"
                                       Text="Dead Letter Queue"
                                       VerticalOptions="Center" />
                                <Switch Grid.Column="1"
                                        IsToggled="{Binding EnableDeadLetterQueue}" />
                            </Grid>

                            <!-- Max Retries -->
                            <Label Text="Máximo de Tentativas" />
                            <Slider Minimum="1" Maximum="10" Value="{Binding MaxRetries}" />
                            <Label Text="{Binding MaxRetries, StringFormat='Tentativas: {0:F0}'}"
                                   FontSize="12"
                                   TextColor="Gray" />
                        </StackLayout>
                    </Expander>

                    <!-- Topics and Queues -->
                    <Label Text="?? Tópicos/Filas"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}"
                           Margin="0,20,0,5" />

                    <Entry x:Name="TopicEntry"
                           Placeholder="Digite o nome do tópico/fila..."
                           BackgroundColor="{StaticResource Tertiary}" />

                    <Button Text="? Adicionar Tópico/Fila"
                            Command="{Binding AddTopicCommand}"
                            CommandParameter="{Binding Source={x:Reference TopicEntry}, Path=Text}"
                            BackgroundColor="{StaticResource Secondary}"
                            TextColor="White"
                            CornerRadius="8"
                            Margin="0,5,0,10" />

                    <!-- Topics List -->
                    <CollectionView ItemsSource="{Binding Topics}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="10,5" ColumnDefinitions="*,Auto">
                                    <Label Grid.Column="0"
                                           Text="{Binding .}"
                                           VerticalOptions="Center" />
                                    <Button Grid.Column="1"
                                            Text="?"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MessagingConfigViewModel}}, Path=RemoveTopicCommand}"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="Red"
                                            TextColor="White"
                                            CornerRadius="15"
                                            WidthRequest="30"
                                            HeightRequest="30" />
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
            </Frame>

            <!-- Test Connection -->
            <Frame BackgroundColor="White" 
                   CornerRadius="15" 
                   Padding="20"
                   HasShadow="True"
                   IsVisible="{Binding SelectedType, Converter={StaticResource NotEqualsConverter}, ConverterParameter='None'}">
                <StackLayout>
                    <Label Text="?? Testar Configuração"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}" />

                    <Label Text="Teste a conexão antes de salvar"
                           FontSize="12"
                           TextColor="Gray"
                           Margin="0,0,0,15" />

                    <Button Text="?? Testar Conexão"
                            Command="{Binding TestConnectionCommand}"
                            BackgroundColor="Orange"
                            TextColor="White"
                            CornerRadius="8"
                            IsEnabled="{Binding IsNotTesting}" />

                    <!-- Test Result -->
                    <Frame IsVisible="{Binding HasTestResult}"
                           BackgroundColor="{Binding TestResult.IsSuccess, Converter={StaticResource BoolToTestResultColorConverter}}"
                           CornerRadius="8"
                           Padding="15"
                           Margin="0,10,0,0">
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding TestResult.IsSuccess, Converter={StaticResource BoolToEmojiConverter}}"
                                   FontSize="20"
                                   VerticalOptions="Center" />
                            <StackLayout Margin="10,0,0,0">
                                <Label Text="{Binding TestResult.Message}"
                                       FontAttributes="Bold"
                                       TextColor="White" />
                                <Label Text="{Binding TestResult.Details}"
                                       FontSize="12"
                                       TextColor="White"
                                       Opacity="0.8"
                                       IsVisible="{Binding TestResult.Details, Converter={StaticResource IsNotEmptyConverter}}" />
                            </StackLayout>
                        </StackLayout>
                    </Frame>
                </StackLayout>
            </Frame>

            <!-- Action Buttons -->
            <StackLayout Orientation="Horizontal" Spacing="10">
                <Button Text="?? Salvar"
                        Command="{Binding SaveConfigCommand}"
                        BackgroundColor="Green"
                        TextColor="White"
                        CornerRadius="8"
                        HorizontalOptions="FillAndExpand" />

                <Button Text="? Cancelar"
                        Command="{Binding CancelCommand}"
                        BackgroundColor="Gray"
                        TextColor="White"
                        CornerRadius="8"
                        HorizontalOptions="FillAndExpand" />
            </StackLayout>

        </StackLayout>
    </ScrollView>

</ContentPage>