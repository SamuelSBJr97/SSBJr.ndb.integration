<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="SSBJr.ndb.integration.Views.MessagingConfigPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SSBJr.ndb.integration.ViewModels"
             x:DataType="viewmodels:MessagingConfigViewModel"
             Title="ðŸ“¨ ConfiguraÃ§Ã£o de Mensageria"
             Shell.BackgroundColor="{StaticResource Primary}">

    <ScrollView>
        <StackLayout Padding="20" Spacing="20">

            <!-- Header -->
            <Frame BackgroundColor="{StaticResource Primary}" 
                   CornerRadius="15" 
                   Padding="20"
                   HasShadow="True">
                <StackLayout>
                    <Label Text="ðŸ“¨ ConfiguraÃ§Ã£o de Mensageria"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center" />
                    <Label Text="Configure sistemas modernos de mensageria para suas APIs"
                           FontSize="14"
                           TextColor="White"
                           Opacity="0.8"
                           HorizontalOptions="Center" />
                </StackLayout>
            </Frame>

            <!-- Messaging Type Selection -->
            <Frame BackgroundColor="White" 
                   CornerRadius="15" 
                   Padding="20"
                   HasShadow="True">
                <StackLayout>
                    <Label Text="ðŸ”§ Tipo de Mensageria"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}" />

                    <!-- Recommended Services -->
                    <Label Text="ServiÃ§os Modernos (Recomendados)"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Secondary}"
                           Margin="0,15,0,5" />

                    <Button Text="ðŸš€ Apache Kafka - Alto Throughput"
                            Command="{Binding SelectMessagingTypeCommand}"
                            CommandParameter="Apache_Kafka"
                            BackgroundColor="#FF4081"
                            TextColor="White"
                            CornerRadius="8"
                            Margin="0,5" />

                    <Button Text="âš¡ NATS - Simplicidade e Performance"
                            Command="{Binding SelectMessagingTypeCommand}"
                            CommandParameter="NATS"
                            BackgroundColor="#2196F3"
                            TextColor="White"
                            CornerRadius="8"
                            Margin="0,5" />

                    <Button Text="â˜ï¸ Azure Service Bus - Enterprise Cloud"
                            Command="{Binding SelectMessagingTypeCommand}"
                            CommandParameter="Azure_ServiceBus"
                            BackgroundColor="#0078D4"
                            TextColor="White"
                            CornerRadius="8"
                            Margin="0,5" />

                    <!-- Cloud Services -->
                    <Label Text="ServiÃ§os Cloud"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Secondary}"
                           Margin="0,15,0,5" />

                    <Button Text="ðŸ“¬ AWS SQS - Filas Simples"
                            Command="{Binding SelectMessagingTypeCommand}"
                            CommandParameter="AWS_SQS"
                            BackgroundColor="#FF9900"
                            TextColor="White"
                            CornerRadius="8"
                            Margin="0,5" />

                    <Button Text="ðŸ“¡ AWS EventBridge - Event-Driven"
                            Command="{Binding SelectMessagingTypeCommand}"
                            CommandParameter="AWS_EventBridge"
                            BackgroundColor="#FF9900"
                            TextColor="White"
                            CornerRadius="8"
                            Margin="0,5" />

                    <Button Text="ðŸ”„ Google Pub/Sub - Serverless"
                            Command="{Binding SelectMessagingTypeCommand}"
                            CommandParameter="Google_PubSub"
                            BackgroundColor="#4285F4"
                            TextColor="White"
                            CornerRadius="8"
                            Margin="0,5" />

                    <!-- Legacy -->
                    <Label Text="âš ï¸ Legado (NÃ£o Recomendado)"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="Red"
                           Margin="0,15,0,5" />

                    <Button Text="ðŸ° RabbitMQ (Deprecated)"
                            Command="{Binding SelectMessagingTypeCommand}"
                            CommandParameter="RabbitMQ"
                            BackgroundColor="Gray"
                            TextColor="White"
                            CornerRadius="8"
                            Margin="0,5" />

                    <Button Text="âŒ Nenhuma Mensageria"
                            Command="{Binding SelectMessagingTypeCommand}"
                            CommandParameter="None"
                            BackgroundColor="{StaticResource Tertiary}"
                            TextColor="{StaticResource Primary}"
                            CornerRadius="8"
                            Margin="0,5" />
                </StackLayout>
            </Frame>

            <!-- Current Configuration -->
            <Frame BackgroundColor="White" 
                   CornerRadius="15" 
                   Padding="20"
                   HasShadow="True"
                   IsVisible="{Binding SelectedType, Converter={StaticResource NotEqualsConverter}, ConverterParameter='None'}">
                <StackLayout>
                    <Label Text="âš™ï¸ ConfiguraÃ§Ã£o Atual"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}" />

                    <!-- Selected Type Display -->
                    <Frame BackgroundColor="{StaticResource Primary}"
                           CornerRadius="10"
                           Padding="15"
                           Margin="0,10,0,20">
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding SelectedTypeIcon}"
                                   FontSize="24"
                                   VerticalOptions="Center" />
                            <StackLayout Margin="15,0,0,0">
                                <Label Text="{Binding SelectedTypeName}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="White" />
                                <Label Text="{Binding SelectedTypeDescription}"
                                       FontSize="12"
                                       TextColor="White"
                                       Opacity="0.8" />
                            </StackLayout>
                        </StackLayout>
                    </Frame>

                    <!-- Connection String -->
                    <Label Text="ðŸ”— String de ConexÃ£o"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}" />
                    <Entry Text="{Binding ConnectionString}"
                           Placeholder="Digite a string de conexÃ£o..."
                           BackgroundColor="{StaticResource Tertiary}"
                           Margin="0,5,0,15" />

                    <!-- Advanced Configuration -->
                    <Frame BackgroundColor="{StaticResource Tertiary}" CornerRadius="10" Padding="15" Margin="0,20,0,0">
                        <StackLayout>
                            <Button x:Name="AdvancedToggleButton"
                                    Text="ðŸ”§ ConfiguraÃ§Ãµes AvanÃ§adas â–¼"
                                    BackgroundColor="Transparent"
                                    TextColor="{StaticResource Secondary}"
                                    FontSize="14"
                                    FontAttributes="Bold"
                                    Clicked="OnAdvancedToggleClicked" />
                            
                            <StackLayout x:Name="AdvancedConfigPanel" IsVisible="False" Padding="10,0,0,0">
                                <!-- Batching Configuration -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    
                                    <Label Grid.Column="0"
                                           Text="Habilitar Batching"
                                           VerticalOptions="Center" />
                                    <Switch Grid.Column="1"
                                            IsToggled="{Binding EnableBatching}" />
                                </Grid>

                                <!-- Batch Size -->
                                <StackLayout IsVisible="{Binding EnableBatching}">
                                    <Label Text="Tamanho do Batch" />
                                    <Slider Minimum="10" Maximum="1000" Value="{Binding BatchSize}" />
                                    <Label Text="{Binding BatchSize, StringFormat='Tamanho: {0:F0}'}"
                                           FontSize="12"
                                           TextColor="Gray" />
                                </StackLayout>

                                <!-- Partitioning (Kafka specific) -->
                                <Grid IsVisible="{Binding IsKafka}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    
                                    <Label Grid.Column="0"
                                           Text="Habilitar Particionamento"
                                           VerticalOptions="Center" />
                                    <Switch Grid.Column="1"
                                            IsToggled="{Binding EnablePartitioning}" />
                                </Grid>

                                <!-- Partition Count -->
                                <StackLayout IsVisible="{Binding ShowPartitionConfig}">
                                    <Label Text="NÃºmero de PartiÃ§Ãµes" />
                                    <Slider Minimum="1" Maximum="20" Value="{Binding PartitionCount}" />
                                    <Label Text="{Binding PartitionCount, StringFormat='PartiÃ§Ãµes: {0:F0}'}"
                                           FontSize="12"
                                           TextColor="Gray" />
                                </StackLayout>

                                <!-- Consumer Group -->
                                <Label Text="Grupo de Consumidores" />
                                <Entry Text="{Binding ConsumerGroup}"
                                       Placeholder="default"
                                       BackgroundColor="{StaticResource Tertiary}" />

                                <!-- Dead Letter Queue -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    
                                    <Label Grid.Column="0"
                                           Text="Dead Letter Queue"
                                           VerticalOptions="Center" />
                                    <Switch Grid.Column="1"
                                            IsToggled="{Binding EnableDeadLetterQueue}" />
                                </Grid>

                                <!-- Max Retries -->
                                <Label Text="MÃ¡ximo de Tentativas" />
                                <Slider Minimum="1" Maximum="10" Value="{Binding MaxRetries}" />
                                <Label Text="{Binding MaxRetries, StringFormat='Tentativas: {0:F0}'}"
                                       FontSize="12"
                                       TextColor="Gray" />
                            </StackLayout>
                        </StackLayout>
                    </Frame>

                    <!-- Topics and Queues -->
                    <Label Text="ðŸ“‹ TÃ³picos/Filas"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}"
                           Margin="0,20,0,5" />

                    <Entry x:Name="TopicEntry"
                           Placeholder="Digite o nome do tÃ³pico/fila..."
                           BackgroundColor="{StaticResource Tertiary}" />

                    <Button Text="âž• Adicionar TÃ³pico/Fila"
                            Command="{Binding AddTopicCommand}"
                            CommandParameter="{Binding Source={x:Reference TopicEntry}, Path=Text}"
                            BackgroundColor="{StaticResource Secondary}"
                            TextColor="White"
                            CornerRadius="8"
                            Margin="0,5,0,10" />

                    <!-- Topics List -->
                    <CollectionView ItemsSource="{Binding Topics}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="10,5" ColumnDefinitions="*,Auto">
                                    <Label Grid.Column="0"
                                           Text="{Binding .}"
                                           VerticalOptions="Center" />
                                    <Button Grid.Column="1"
                                            Text="âŒ"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MessagingConfigViewModel}}, Path=RemoveTopicCommand}"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="Red"
                                            TextColor="White"
                                            CornerRadius="15"
                                            WidthRequest="30"
                                            HeightRequest="30" />
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
            </Frame>

            <!-- Test Connection -->
            <Frame BackgroundColor="White" 
                   CornerRadius="15" 
                   Padding="20"
                   HasShadow="True"
                   IsVisible="{Binding SelectedType, Converter={StaticResource NotEqualsConverter}, ConverterParameter='None'}">
                <StackLayout>
                    <Label Text="ðŸ§ª Testar ConfiguraÃ§Ã£o"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}" />

                    <Label Text="Teste a conexÃ£o antes de salvar"
                           FontSize="12"
                           TextColor="Gray"
                           Margin="0,0,0,15" />

                    <Button Text="ðŸ” Testar ConexÃ£o"
                            Command="{Binding TestConnectionCommand}"
                            BackgroundColor="Orange"
                            TextColor="White"
                            CornerRadius="8"
                            IsEnabled="{Binding IsNotTesting}" />

                    <!-- Test Result -->
                    <Frame IsVisible="{Binding HasTestResult}"
                           BackgroundColor="{Binding TestResult.IsSuccess, Converter={StaticResource BoolToTestResultColorConverter}}"
                           CornerRadius="8"
                           Padding="15"
                           Margin="0,10,0,0">
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding TestResult.IsSuccess, Converter={StaticResource BoolToEmojiConverter}}"
                                   FontSize="20"
                                   VerticalOptions="Center" />
                            <StackLayout Margin="10,0,0,0">
                                <Label Text="{Binding TestResult.Message}"
                                       FontAttributes="Bold"
                                       TextColor="White" />
                                <Label Text="{Binding TestResult.Details}"
                                       FontSize="12"
                                       TextColor="White"
                                       Opacity="0.8"
                                       IsVisible="{Binding TestResult.Details, Converter={StaticResource IsNotEmptyConverter}}" />
                            </StackLayout>
                        </StackLayout>
                    </Frame>
                </StackLayout>
            </Frame>

            <!-- Action Buttons -->
            <StackLayout Orientation="Horizontal" Spacing="10">
                <Button Text="ðŸ’¾ Salvar"
                        Command="{Binding SaveConfigCommand}"
                        BackgroundColor="Green"
                        TextColor="White"
                        CornerRadius="8"
                        HorizontalOptions="FillAndExpand" />

                <Button Text="âŒ Cancelar"
                        Command="{Binding CancelCommand}"
                        BackgroundColor="Gray"
                        TextColor="White"
                        CornerRadius="8"
                        HorizontalOptions="FillAndExpand" />
            </StackLayout>

        </StackLayout>
    </ScrollView>

</ContentPage>