@page "/login"
@using Microsoft.AspNetCore.Components.Authorization
@using SSBJr.ndb.integration.Web.Services
@inject CustomAuthenticationStateProvider AuthProvider
@inject NavigationManager Navigation
@inject IJSRuntime JS
@rendermode InteractiveServer

<PageTitle>Login - SSBJr API Manager</PageTitle>

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - SSBJr API Manager</title>
    <base href="~/" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <link href="css/site.css" rel="stylesheet" />
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <div class="text-center mb-4">
                <h1 class="h3 mb-3 fw-normal">
                    <i class="bi bi-shield-lock text-primary"></i>
                    SSBJr API Manager
                </h1>
                <p class="text-muted">Sistema de gerenciamento de APIs</p>
            </div>

            <!-- Login Form -->
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="floatingInput" placeholder="Username" @bind="username" />
                <label for="floatingInput">Nome de usuário</label>
            </div>

            <div class="form-floating mb-3">
                <input type="password" class="form-control" id="floatingPassword" placeholder="Password" @bind="password" />
                <label for="floatingPassword">Senha</label>
            </div>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    <i class="bi bi-exclamation-triangle"></i> @errorMessage
                </div>
            }

            <button type="submit" class="btn btn-lg btn-primary w-100 mb-3" @onclick="HandleLogin" disabled="@isLoading">
                @if (isLoading)
                {
                    <span class="spinner-border spinner-border-sm me-2"></span>
                }
                Entrar
            </button>

            <!-- Demo Credentials -->
            <div class="mt-4 p-3 bg-light rounded">
                <h6 class="text-muted mb-2">Credenciais de demonstração:</h6>
                <small class="text-muted">
                    <strong>Usuário:</strong> admin<br>
                    <strong>Senha:</strong> admin123
                </small>
                <div class="mt-2">
                    <button class="btn btn-sm btn-outline-primary" @onclick="FillDemoCredentials">
                        <i class="bi bi-lightning"></i> Usar demo
                    </button>
                </div>
            </div>
        </div>
    </div>

    <style>
        .login-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 1rem;
        }

        .login-card {
            width: 100%;
            max-width: 400px;
            padding: 2rem;
            background: white;
            border-radius: 1rem;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

        .form-floating > .form-control {
            border: 2px solid #e1e5e9;
        }

        .form-floating > .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        }

        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        }
    </style>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="_framework/blazor.web.js"></script>
</body>
</html>

@code {
    private string username = string.Empty;
    private string password = string.Empty;
    private bool isLoading = false;
    private string errorMessage = string.Empty;

    private async Task HandleLogin()
    {
        isLoading = true;
        errorMessage = string.Empty;

        try
        {
            // Simple authentication check for demo
            if (username == "admin" && password == "admin123")
            {
                Navigation.NavigateTo("/", forceLoad: true);
            }
            else
            {
                errorMessage = "Credenciais inválidas. Use: admin / admin123";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Erro interno. Tente novamente.";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void FillDemoCredentials()
    {
        username = "admin";
        password = "admin123";
        StateHasChanged();
    }
}