                    </Grid>

                    <!-- Dark Mode -->
                    <Grid Margin="0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        
                        <Label Grid.Column="0"
                               Text="Modo Escuro"
                               VerticalOptions="Center" />
                        <Switch Grid.Column="1"
                                IsToggled="{Binding EnableDarkMode}" />
                    </Grid>
                </StackLayout>
            </Frame>

            <!-- Cache and Data -->
            <Frame BackgroundColor="White" 
                   CornerRadius="15" 
                   Padding="20"
                   HasShadow="True">
                <StackLayout>
                    <Label Text="ðŸ’¾ Cache e Dados"
